{
  "name": "template-svelte",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Template for building Svelte libraries with Storybook and Rollup",
  "author": "Eric Liu (https://github.com/metonym)",
  "svelte": "src/index.js",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "scripts": {
    "start": "start-storybook -p 9000",
    "build": "rollup -c",
    "build:docs": "build-storybook -o docs",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@storybook/addon-knobs": "^5.2.6",
    "@storybook/addon-storysource": "^5.2.6",
    "@storybook/cli": "^5.2.6",
    "@storybook/svelte": "^5.2.6",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/svelte": "^1.11.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-transform-svelte": "^2.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "pretty-quick": "^2.0.1",
    "regenerator-runtime": "^0.13.3",
    "rollup": "^1.27.14",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.16.7",
    "svelte-loader": "^2.13.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --pattern 'src/**/*.{js,svelte}' --staged"
    }
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "eslint --fix 'src/**'",
      "git add"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": "jest-transform-svelte",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "regenerator-runtime/runtime",
      "@testing-library/jest-dom/extend-expect"
    ]
  }
}
